    <video src="./videos/Laptop.mp4" autoplay muted loop class="mb-5"></video>
    <div class="main_header" data-aos="fade-up">
      <div class="col-sm-6 mt-5">
        <div class="display-3 text-white"><i class="fas fa-book"></i> CodeBook</div>
        <div class="h3 text-white mt-4" style="text-align: center;">Your Anytime Code Compiler/interpreter & HandBook</div>
      </div>
      <div class="main_header" style="z-index: 999;">
        <form action="/compiler" method="GET">
          <button class="btn btn-warning btn-lg">
            Start Coding
          </button>
        </form>
      </div>
    </div>
  </div>

  <% if(msg){ %>
    <div class="container mt-2">
      <div class="alert alert-primary" role="alertdialog">
        <%=msg%>
